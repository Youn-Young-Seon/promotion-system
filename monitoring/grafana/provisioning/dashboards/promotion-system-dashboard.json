{
  "dashboard": {
    "id": null,
    "uid": "promotion-system",
    "title": "Promotion System Monitoring",
    "tags": ["promotion", "microservices"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Request Rate (req/s)",
        "targets": [
          {
            "expr": "rate(api_gateway_http_requests_total[1m])",
            "legendFormat": "API Gateway",
            "refId": "A"
          },
          {
            "expr": "rate(coupon_service_http_requests_total[1m])",
            "legendFormat": "Coupon Service",
            "refId": "B"
          },
          {
            "expr": "rate(point_service_http_requests_total[1m])",
            "legendFormat": "Point Service",
            "refId": "C"
          },
          {
            "expr": "rate(timesale_service_http_requests_total[1m])",
            "legendFormat": "TimeSale Service",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/s", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ],
        "xaxis": {"show": true},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 5,
        "legend": {"show": true, "values": true, "current": true}
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Response Time (ms)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(api_gateway_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "API Gateway (p95)",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(coupon_service_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "Coupon Service (p95)",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, rate(point_service_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "Point Service (p95)",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.95, rate(timesale_service_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "TimeSale Service (p95)",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Response Time", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ],
        "xaxis": {"show": true},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {"show": true, "values": true, "current": true}
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "graph",
        "title": "CPU Usage (%)",
        "targets": [
          {
            "expr": "rate(api_gateway_process_cpu_user_seconds_total[1m]) * 100",
            "legendFormat": "API Gateway",
            "refId": "A"
          },
          {
            "expr": "rate(coupon_service_process_cpu_user_seconds_total[1m]) * 100",
            "legendFormat": "Coupon Service",
            "refId": "B"
          },
          {
            "expr": "rate(point_service_process_cpu_user_seconds_total[1m]) * 100",
            "legendFormat": "Point Service",
            "refId": "C"
          },
          {
            "expr": "rate(timesale_service_process_cpu_user_seconds_total[1m]) * 100",
            "legendFormat": "TimeSale Service",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ],
        "xaxis": {"show": true},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {"show": true, "values": true, "current": true}
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "graph",
        "title": "Memory Usage (MB)",
        "targets": [
          {
            "expr": "api_gateway_process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "API Gateway",
            "refId": "A"
          },
          {
            "expr": "coupon_service_process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Coupon Service",
            "refId": "B"
          },
          {
            "expr": "point_service_process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Point Service",
            "refId": "C"
          },
          {
            "expr": "timesale_service_process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "TimeSale Service",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "mbytes", "label": "Memory (MB)", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ],
        "xaxis": {"show": true},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {"show": true, "values": true, "current": true}
      },
      {
        "id": 5,
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 16},
        "type": "stat",
        "title": "Total Requests (Last 5m)",
        "targets": [
          {
            "expr": "sum(increase(api_gateway_http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "auto",
          "textMode": "auto"
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 16},
        "type": "stat",
        "title": "Error Rate (%)",
        "targets": [
          {
            "expr": "sum(rate(api_gateway_http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(api_gateway_http_requests_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "auto",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 16},
        "type": "stat",
        "title": "Avg Response Time (ms)",
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(api_gateway_http_request_duration_seconds_bucket[5m])) * 1000",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "auto",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 16},
        "type": "stat",
        "title": "Active Services",
        "targets": [
          {
            "expr": "count(up{job=~\".*-service|api-gateway\"} == 1)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "justifyMode": "center",
          "textMode": "value_and_name"
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  },
  "overwrite": true
}
