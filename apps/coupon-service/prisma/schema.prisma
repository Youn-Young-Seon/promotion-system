// Coupon Service Database Schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CouponPolicy {
  id                    BigInt   @id @default(autoincrement())
  title                 String   @db.VarChar(255)
  description           String   @db.Text
  totalQuantity         Int      @map("total_quantity")
  issuedQuantity        Int      @default(0) @map("issued_quantity")
  startTime             DateTime @map("start_time") @db.Timestamp
  endTime               DateTime @map("end_time") @db.Timestamp
  discountType          DiscountType @map("discount_type")
  discountValue         Int      @map("discount_value")
  minimumOrderAmount    Int      @map("minimum_order_amount")
  maximumDiscountAmount Int      @map("maximum_discount_amount")
  createdAt             DateTime @default(now()) @map("created_at") @db.Timestamp
  updatedAt             DateTime @updatedAt @map("updated_at") @db.Timestamp

  coupons Coupon[]

  @@map("coupon_policies")
}

model Coupon {
  id             BigInt       @id @default(autoincrement())
  couponPolicyId BigInt       @map("coupon_policy_id")
  userId         BigInt       @map("user_id")
  orderId        BigInt?      @map("order_id")
  status         CouponStatus
  expirationTime DateTime     @map("expiration_time") @db.Timestamp
  issuedAt       DateTime     @default(now()) @map("issued_at") @db.Timestamp
  usedAt         DateTime?    @map("used_at") @db.Timestamp
  createdAt      DateTime     @default(now()) @map("created_at") @db.Timestamp
  updatedAt      DateTime     @updatedAt @map("updated_at") @db.Timestamp

  couponPolicy CouponPolicy @relation(fields: [couponPolicyId], references: [id])

  @@index([userId])
  @@index([orderId])
  @@index([status])
  @@index([issuedAt])
  @@map("coupons")
}

enum DiscountType {
  FIXED_AMOUNT
  PERCENTAGE
}

enum CouponStatus {
  AVAILABLE
  USED
  EXPIRED
  CANCELED
}
