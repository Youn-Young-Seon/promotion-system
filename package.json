{
  "name": "promotion-system",
  "version": "1.0.0",
  "description": "Microservices-based promotion system with NestJS, gRPC, Kafka, Redis, and etcd",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api-gateway/main",
    "dev:gateway": "nest start --watch api-gateway",
    "dev:coupon": "nest start --watch coupon-service",
    "dev:point": "nest start --watch point-service",
    "dev:timesale": "nest start --watch timesale-service",
    "dev:all": "concurrently -n \"gateway,coupon,point,timesale\" -c \"blue,green,yellow,magenta\" \"pnpm dev:gateway\" \"pnpm dev:coupon\" \"pnpm dev:point\" \"pnpm dev:timesale\"",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "pnpm --filter coupon-service prisma generate && pnpm --filter point-service prisma generate && pnpm --filter timesale-service prisma generate",
    "prisma:migrate": "pnpm --filter coupon-service prisma migrate dev && pnpm --filter point-service prisma migrate dev && pnpm --filter timesale-service prisma migrate dev",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "perf:coupon": "docker run --rm -i --network=host grafana/k6 run - <performance-tests/scenarios/coupon-load-test.js",
    "perf:point": "docker run --rm -i --network=host grafana/k6 run - <performance-tests/scenarios/point-load-test.js",
    "perf:timesale": "docker run --rm -i --network=host grafana/k6 run - <performance-tests/scenarios/timesale-load-test.js",
    "perf:full": "docker run --rm -i --network=host grafana/k6 run - <performance-tests/scenarios/full-system-test.js",
    "perf:all": "pnpm perf:coupon && pnpm perf:point && pnpm perf:timesale"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.4",
    "@grpc/proto-loader": "^0.7.14",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/microservices": "^10.4.15",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/throttler": "^5.1.2",
    "@prisma/client": "^6.1.0",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cls-hooked": "^4.2.2",
    "etcd3": "^1.1.2",
    "ioredis": "^5.4.2",
    "joi": "^17.13.3",
    "kafkajs": "^2.2.4",
    "opossum": "^8.1.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prom-client": "^15.1.3",
    "redlock": "^5.0.0-beta.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/opossum": "^8.1.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@common/(.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}
