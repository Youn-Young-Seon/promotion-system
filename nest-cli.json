{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps/api-gateway",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
    "assets": [
      {
        "include": "**/*.proto",
        "outDir": "./dist/apps/api-gateway",
        "watchAssets": true
      }
    ]
  },
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.proto",
            "outDir": "./dist/apps/api-gateway",
            "watchAssets": true
          }
        ]
      }
    },
    "coupon-service": {
      "type": "application",
      "root": "apps/coupon-service",
      "entryFile": "main",
      "sourceRoot": "apps/coupon-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/coupon-service/tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.proto",
            "outDir": "./dist/apps/coupon-service",
            "watchAssets": true
          }
        ]
      }
    },
    "point-service": {
      "type": "application",
      "root": "apps/point-service",
      "entryFile": "main",
      "sourceRoot": "apps/point-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/point-service/tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.proto",
            "outDir": "./dist/apps/point-service",
            "watchAssets": true
          }
        ]
      }
    },
    "timesale-service": {
      "type": "application",
      "root": "apps/timesale-service",
      "entryFile": "main",
      "sourceRoot": "apps/timesale-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/timesale-service/tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.proto",
            "outDir": "./dist/apps/timesale-service",
            "watchAssets": true
          }
        ]
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}
