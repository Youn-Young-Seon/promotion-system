// TimeSale Service Database Schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          BigInt   @id @default(autoincrement())
  name        String   @db.VarChar(255)
  price       Int
  description String   @db.Text
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamp
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamp

  timeSales TimeSale[]

  @@map("products")
}

model TimeSale {
  id                BigInt         @id @default(autoincrement())
  productId         BigInt         @map("product_id")
  quantity          Int
  remainingQuantity Int            @map("remaining_quantity")
  discountPrice     Int            @map("discount_price")
  startAt           DateTime       @map("start_at") @db.Timestamp
  endAt             DateTime       @map("end_at") @db.Timestamp
  status            TimeSaleStatus
  version           Int            @default(0)
  createdAt         DateTime       @default(now()) @map("created_at") @db.Timestamp
  updatedAt         DateTime       @updatedAt @map("updated_at") @db.Timestamp

  product Product          @relation(fields: [productId], references: [id])
  orders  TimeSaleOrder[]

  @@index([productId])
  @@index([status])
  @@index([startAt])
  @@map("time_sales")
}

model TimeSaleOrder {
  id          BigInt           @id @default(autoincrement())
  timeSaleId  BigInt           @map("time_sale_id")
  userId      BigInt           @map("user_id")
  quantity    Int
  status      OrderStatus
  queueNumber Int              @default(0) @map("queue_number")
  createdAt   DateTime         @default(now()) @map("created_at") @db.Timestamp
  updatedAt   DateTime         @updatedAt @map("updated_at") @db.Timestamp

  timeSale TimeSale @relation(fields: [timeSaleId], references: [id])

  @@index([timeSaleId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("time_sale_orders")
}

enum TimeSaleStatus {
  SCHEDULED
  ACTIVE
  ENDED
  SOLD_OUT
}

enum OrderStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELED
}
