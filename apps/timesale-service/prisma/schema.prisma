// This is your Prisma schema file for Time Sale Service

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id          BigInt     @id @default(autoincrement())
  name        String     @db.VarChar(255)
  price       BigInt
  description String     @db.Text
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  timeSales TimeSale[]

  @@map("products")
}

model TimeSale {
  id                BigInt         @id @default(autoincrement())
  productId         BigInt         @map("product_id")
  product           Product        @relation(fields: [productId], references: [id])
  quantity          BigInt
  remainingQuantity BigInt         @map("remaining_quantity")
  discountPrice     BigInt         @map("discount_price")
  startAt           DateTime       @map("start_at")
  endAt             DateTime       @map("end_at")
  status            TimeSaleStatus @default(SCHEDULED)
  version           BigInt         @default(0)
  createdAt         DateTime       @default(now()) @map("created_at")
  updatedAt         DateTime       @updatedAt @map("updated_at")

  orders TimeSaleOrder[]

  @@index([productId])
  @@index([status])
  @@index([startAt])
  @@map("time_sales")
}

model TimeSaleOrder {
  id         BigInt      @id @default(autoincrement())
  userId     BigInt      @map("user_id")
  timeSaleId BigInt      @map("time_sale_id")
  timeSale   TimeSale    @relation(fields: [timeSaleId], references: [id])
  quantity   BigInt
  status     OrderStatus @default(PENDING)
  createdAt  DateTime    @default(now()) @map("created_at")
  updatedAt  DateTime    @updatedAt @map("updated_at")

  @@index([userId])
  @@index([timeSaleId])
  @@index([status])
  @@map("time_sale_orders")
}

enum TimeSaleStatus {
  SCHEDULED
  ACTIVE
  ENDED
  CANCELED
}

enum OrderStatus {
  PENDING
  CONFIRMED
  CANCELED
}
